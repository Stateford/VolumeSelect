<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="CB_DEVICE_LIST" ItemsSource="{Binding Path=Devices}" DisplayMemberPath="name" HorizontalAlignment="Left" Margin="24,88,0,0" VerticalAlignment="Top" Width="258" SelectionChanged="CB_DEVICE_LIST_SelectionChanged"/>
        <Slider x:Name="VOLUME_SLIDER" HorizontalAlignment="Left" Margin="24,115,0,0" VerticalAlignment="Top" Width="199" Height="23" Maximum="100" AutoToolTipPlacement="TopLeft" ValueChanged="VOLUME_SLIDER_ValueChanged"/>
        <TextBox x:Name="TB_VOLUME" HorizontalAlignment="Left" Height="23" Margin="228,115,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="54"/>
    </Grid>
</Window>
